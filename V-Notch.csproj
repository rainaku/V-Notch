<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <AssemblyName>V-Notch</AssemblyName>
    <RootNamespace>VNotch</RootNamespace>
    
    <!-- Single file publish -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    
    <!-- App info -->
    <Version>1.0.0</Version>
    <Company>V-Notch</Company>
    <Product>V-Notch</Product>
    <Description>MacOS Notch for Windows</Description>
    <ApplicationIcon>logo.ico</ApplicationIcon>
    
    <!-- DPI awareness manifest -->
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.0" />
    <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Fonts\SF-Pro-Display-Bold.otf" />
    <Resource Include="Fonts\SF-Pro-Display-Semibold.otf" />
    <Resource Include="Fonts\SF-Pro-Display-Medium.otf" />
    <Resource Include="Fonts\SF-Pro-Display-Regular.otf" />
    <Resource Include="Services\icons\browser.svg" />
    <Resource Include="Services\icons\soundcloud.svg" />
    <Resource Include="Services\icons\spotify.svg" />
    <Resource Include="Services\icons\tiktok.svg" />
    <Resource Include="Services\icons\twitter.svg" />
    <Resource Include="Services\icons\youtube.svg" />
    <None Include="logo.ico">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
