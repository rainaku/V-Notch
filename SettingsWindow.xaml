<Window x:Class="VNotch.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="V-Notch - Cài đặt"
        Width="480" Height="620"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1a1a1a">
    
    <Window.Resources>
        <!-- Modern TextBlock style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        
        <!-- Section Header style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>
        
        <!-- Modern Slider style -->
        <Style TargetType="Slider">
            <Setter Property="Margin" Value="0,4,0,12"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Foreground" Value="#0a84ff"/>
        </Style>
        
        <!-- Modern CheckBox style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,6,0,6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Modern ComboBox style -->
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,4,0,12"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#3a3a3a"/>
        </Style>
        
        <!-- Modern Button style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0a84ff"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1a94ff"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#3a3a3a"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4a4a4a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#252525" Padding="20,16">
            <StackPanel>
                <TextBlock Text="⚙️ Cài đặt V-Notch" 
                           FontSize="20" 
                           FontWeight="Bold"/>
                <TextBlock Text="Tùy chỉnh giao diện và hành vi của notch" 
                           Foreground="#888888"
                           FontSize="12"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Settings ScrollViewer -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="20,0">
            <StackPanel Margin="0,0,0,20">
                
                <!-- APPEARANCE SECTION -->
                <TextBlock Text="GIAO DIỆN" Style="{StaticResource SectionHeader}"/>
                
                <!-- Width -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Chiều rộng"/>
                    <TextBlock Grid.Column="1">
                        <Run x:Name="WidthValue" Text="200"/>
                        <Run Text="px"/>
                    </TextBlock>
                </Grid>
                <Slider x:Name="WidthSlider" 
                        Minimum="100" Maximum="400" 
                        Value="200"
                        TickFrequency="10"
                        IsSnapToTickEnabled="True"
                        ValueChanged="WidthSlider_ValueChanged"/>
                
                <!-- Height -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Chiều cao"/>
                    <TextBlock Grid.Column="1">
                        <Run x:Name="HeightValue" Text="32"/>
                        <Run Text="px"/>
                    </TextBlock>
                </Grid>
                <Slider x:Name="HeightSlider" 
                        Minimum="20" Maximum="50" 
                        Value="32"
                        TickFrequency="2"
                        IsSnapToTickEnabled="True"
                        ValueChanged="HeightSlider_ValueChanged"/>
                
                <!-- Corner Radius -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Bo góc"/>
                    <TextBlock Grid.Column="1">
                        <Run x:Name="RadiusValue" Text="16"/>
                        <Run Text="px"/>
                    </TextBlock>
                </Grid>
                <Slider x:Name="RadiusSlider" 
                        Minimum="0" Maximum="30" 
                        Value="16"
                        TickFrequency="2"
                        IsSnapToTickEnabled="True"
                        ValueChanged="RadiusSlider_ValueChanged"/>
                
                <!-- Opacity -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Độ mờ"/>
                    <TextBlock Grid.Column="1">
                        <Run x:Name="OpacityValue" Text="100"/>
                        <Run Text="%"/>
                    </TextBlock>
                </Grid>
                <Slider x:Name="OpacitySlider" 
                        Minimum="50" Maximum="100" 
                        Value="100"
                        TickFrequency="5"
                        IsSnapToTickEnabled="True"
                        ValueChanged="OpacitySlider_ValueChanged"/>
                
                <!-- Visual Effects -->
                <CheckBox x:Name="ShadowCheck" Content="Hiệu ứng đổ bóng"/>
                <CheckBox x:Name="GlowCheck" Content="Hiệu ứng phát sáng khi hover"/>
                <CheckBox x:Name="CameraCheck" Content="Hiện chỉ báo camera"/>
                
                <!-- ANIMATION SECTION -->
                <TextBlock Text="ANIMATION" Style="{StaticResource SectionHeader}"/>
                
                <CheckBox x:Name="AnimationCheck" Content="Bật animations"/>
                <CheckBox x:Name="BounceCheck" Content="Hiệu ứng bounce"/>
                
                <!-- Animation Speed -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Tốc độ animation"/>
                    <TextBlock Grid.Column="1">
                        <Run x:Name="AnimSpeedValue" Text="1.0"/>
                        <Run Text="x"/>
                    </TextBlock>
                </Grid>
                <Slider x:Name="AnimSpeedSlider" 
                        Minimum="0.5" Maximum="2.0" 
                        Value="1.0"
                        TickFrequency="0.1"
                        IsSnapToTickEnabled="True"
                        ValueChanged="AnimSpeedSlider_ValueChanged"/>
                
                <!-- BEHAVIOR SECTION -->
                <TextBlock Text="HÀNH VI" Style="{StaticResource SectionHeader}"/>
                
                <CheckBox x:Name="HoverExpandCheck" Content="Mở rộng khi hover"/>
                <CheckBox x:Name="CursorBypassCheck" Content="Cursor bypass (không bị kẹt chuột)"/>
                
                <!-- Hover Expand Delay -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Thời gian chờ mở rộng"/>
                    <TextBlock Grid.Column="1">
                        <Run x:Name="HoverDelayValue" Text="100"/>
                        <Run Text="ms"/>
                    </TextBlock>
                </Grid>
                <Slider x:Name="HoverDelaySlider" 
                        Minimum="0" Maximum="500" 
                        Value="100"
                        TickFrequency="50"
                        IsSnapToTickEnabled="True"
                        ValueChanged="HoverDelaySlider_ValueChanged"/>
                
                <!-- MONITOR SECTION -->
                <TextBlock Text="MÀN HÌNH" Style="{StaticResource SectionHeader}"/>
                <TextBlock Text="Chọn màn hình hiển thị"/>
                <ComboBox x:Name="MonitorCombo"/>
                
                <!-- SYSTEM SECTION -->
                <TextBlock Text="HỆ THỐNG" Style="{StaticResource SectionHeader}"/>
                <CheckBox x:Name="AutoStartCheck" Content="Khởi động cùng Windows"/>
                <CheckBox x:Name="MusicNotifyCheck" Content="Hiện thông báo nhạc"/>
                <CheckBox x:Name="SystemNotifyCheck" Content="Hiện thông báo hệ thống"/>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <Border Grid.Row="2" Background="#252525" Padding="20,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Đặt lại mặc định" 
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,10,0"
                        Click="Reset_Click"/>
                <Button Content="Hủy" 
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,10,0"
                        Click="Cancel_Click"/>
                <Button Content="Lưu" Click="Save_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
